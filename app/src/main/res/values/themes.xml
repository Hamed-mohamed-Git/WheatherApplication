<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WheatherApplication" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>


        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/white</item>

        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/gray</item>
        <item name="colorTertiary">@color/white</item>
        <item name="colorOnTertiaryContainer">@color/white</item>

        <item name="colorOnSurface">@color/gray</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorSurface">@color/setting_color</item>
        <item name="colorSurfaceVariant">@color/white</item>

        <item name="colorOnSurfaceInverse">@color/white</item>
        <item name="colorSurfaceInverse">@color/white</item>
        <item name="colorPrimaryInverse">@color/white</item>
        <item name="colorOutline">@color/white</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="colorOnPrimarySurface">@color/white</item>

<!--        <item name="android:colorForegroundInverse">?attr/colorOnPrimaryFixedVariant</item>-->


        <item name="colorOnBackground">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>


        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">
            true
        </item>
        <item name="android:overScrollMode">never</item>

    </style>

    <style name="AppTheme.DialogTheme" parent="ThemeOverlay.Material3.MaterialCalendar">

        <!-- Put the two options, colorAccent and android:colorAccent. -->
        <item name="colorAccent">@color/white</item>
        <item name="android:colorPrimary">@color/gray</item>
        <item name="android:colorPrimaryDark">@color/gray</item>
        <item name="android:colorAccent">@color/white</item>
    </style>
    <style name="Theme.App.Splashscreen" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.WheatherApplication</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.MaterialTimePicker.Display">
        <item name="android:textColor">@drawable/shrine_diplay_text_color</item>
    </style>
</resources>